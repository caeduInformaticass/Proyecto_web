<!-- PestanasRegistro de preguntas-->
    <div class="container" id="id_con_pes_pre">
        <ul class="nav nav-tabs">
            <li role="presentation"><a href="#">Preguntas</a></li>
            <li role="presentation"><a href="/Pregunta/nuevo_pregunta">Registro de Preguntas</a></li>
            <li role="presentation"><a href="/Temario/nuevo_temario">Registrar Temario</a></li>
            <li role="presentation" class="active"><a href="/Area/nuevo_area">Registrar Area</a></li>
            <li role="presentation"><a href="/Complejidad/nuevo_complejidad">Registrar Complejidad</a></li>
        </ul>
    </div>
<!--  Body de Temario-->
    <div class="container">
       <br><br>
        <div class="row">
<!-- Formulario de Registros -->
         <div class="col-md-6">
              <form action="/Area/crear_area">
                  <div class="form-group">
                      <label for="id_area">Nueva Area</label>
                      <input type="text" class="form-control" id="id_area" placeholder="Area" name="area">
                  </div>
                  <button type="submit" class="btn btn-success">Agregar nueva Area</button>
              </form> 
              <br><br>
          </div>
<!-- Tabla de todas las Areas -->
          <div class="col-md-6">
              <h4>Lista de <strong>Areas</strong></h4>
              <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID Area</th>
                            <th>Area</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%_.each(area ,function(a){%>
                        <tr>
                            <td><%= a.id_area%></td>
                            <td><%= a.area%></td>
                            <td><button type="button" class="btn btn-danger">eliminar</button></td>
                        </tr>
                        <%})%>
                    </tbody>
                </table>
          </div>
        </div>
    </div>